{% extends 'base.html.twig' %}

{% block title %}Profile of {{ user.username }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm border-0 text-center p-4">
                    <div class="mb-3">
                         <div class="ratio ratio-1x1 mx-auto rounded-circle overflow-hidden bg-light d-flex align-items-center justify-content-center" style="width: 150px;">
                            <span class="fs-1 text-muted">{{ user.username|first|upper }}</span>
                        </div>
                    </div>
                    <h3 class="fw-bold text-primary">{{ user.username }}</h3>
                    <p class="badge bg-info text-dark">{{ user.roles|join(', ') }}</p>

                    {% if app.user %}
                        {% if app.user == user %}
                            <button class="btn btn-secondary w-100 mt-3" disabled>This is your profile</button>
                        {% elseif 'ROLE_ADMIN' in app.user.roles %}
                            <button class="btn btn-secondary w-100 mt-3" disabled title="Admins cannot use messaging">Thinking of messaging? (Admin restricted)</button>
                        {% elseif 'ROLE_ADMIN' in user.roles %}
                            <button class="btn btn-secondary w-100 mt-3" disabled>Cannot message Admins</button>
                        {% else %}
                            <a href="{{ path('app_message_chat', {'id': user.id}) }}" class="btn btn-primary w-100 mt-3">
                                <i class="bi bi-envelope-fill"></i> Send Message
                            </a>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary w-100 mt-3">Login to Contact</a>
                    {% endif %}
                </div>
            </div>

            <div class="col-md-8">
                <!-- If Guide, show Tours -->
                {% if tours|length > 0 %}
                    <h4 class="mb-3 fw-bold text-secondary">Trips & Tours</h4>
                    <div class="row g-3 mb-5">
                    {% for tour in tours %}
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold">{{ tour.title }}</h5>
                                    <p class="card-text text-muted small">{{ tour.description|slice(0, 100) }}...</p>
                                    <a href="{{ path('app_tour_show', {'id': tour.id}) }}" class="btn btn-sm btn-outline-info">View Tour</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                {% endif %}

                <!-- Reviews Written -->
                <h4 class="mb-3 fw-bold text-secondary">Reviews Written</h4>
                {% if reviews|length > 0 %}
                    <div class="list-group shadow-sm">
                    {% for review in reviews %}
                        <div class="list-group-item border-0 mb-2 rounded bg-white">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1 fw-bold">Review for {{ review.tour ? review.tour.title : 'a tour' }}</h6>
                                <small class="text-muted">{{ review.createdAt ? review.createdAt|date('M d, Y') : '' }}</small>
                            </div>
                            <div class="text-warning mb-1">
                                {% for i in 1..review.rating %}â˜…{% endfor %}
                            </div>
                            <p class="mb-1 text-muted">{{ review.comment }}</p>
                        </div>
                    {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted fst-italic">This user hasn't written any reviews yet.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
