{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

{% block body %}
    <h1>Place</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ place.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ place.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ place.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ place.category }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ place.latitude }}</td>
            </tr>
            <tr>
                <th>Longtitude</th>
                <td>{{ place.longtitude }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ place.address }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ place.imageUrl }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ place.createdAt ? place.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if app.user %}
        <a href="{{ path('app_favori_toggle', {'id': place.id}) }}" class="btn btn-outline-danger mb-3">
             <i class="bi bi-heart"></i> Add/Remove Favorite
        </a>
        <br>
    {% endif %}

    <a href="{{ path('app_place_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_place_edit', {'id': place.id}) }}">edit</a>

        {{ include('place/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
