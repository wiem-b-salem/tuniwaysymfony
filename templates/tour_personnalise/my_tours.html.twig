{% extends 'base.html.twig' %}

{% block title %}My Tours - TuniWay{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>My Tours</h1>
            <a href="{{ path('app_tour_personnalise_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Tour
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if tours is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> You haven't created any tours yet.
                <a href="{{ path('app_tour_personnalise_new') }}">Create your first tour</a>
            </div>
        {% else %}
            <div class="row">
                {% for tour in tours %}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ tour.title }}</h5>
                                <p class="card-text text-muted">{{ tour.description|slice(0, 100) }}{% if tour.description|length > 100 %}...{% endif %}</p>
                                <ul class="list-unstyled">
                                    <li><strong>Duration:</strong> {{ tour.duration }} hours</li>
                                    <li><strong>Price:</strong> {{ tour.price }} TND</li>
                                    <li><strong>Max Persons:</strong> {{ tour.maxPersons }}</li>
                                    <li><strong>Places:</strong> {{ tour.places|length }}</li>
                                </ul>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="{{ path('app_tour_personnalise_show', {'id': tour.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_tour_personnalise_edit', {'id': tour.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                <form method="post" action="{{ path('app_tour_personnalise_delete', {'id': tour.id}) }}" style="display:inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tour.id) }}">
                                    <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this tour?')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
