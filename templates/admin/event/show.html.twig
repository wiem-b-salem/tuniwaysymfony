{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-5">
                <h1 class="text-primary fw-bold mb-4">{{ event.name }}</h1>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="text-muted mb-3">Event Information</h5>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th style="width: 150px;">Location:</th>
                                    <td>{{ event.location }}</td>
                                </tr>
                                <tr>
                                    <th>Price:</th>
                                    <td>{{ event.price ? event.price ~ ' TND' : 'Free' }}</td>
                                </tr>
                                <tr>
                                    <th>Start:</th>
                                    <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }} {{ event.startTime ? event.startTime|date('H:i') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>End:</th>
                                    <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }} {{ event.endTime ? event.endTime|date('H:i') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mb-4">
                    <h5 class="text-muted">Description</h5>
                    <p class="lead">{{ event.description }}</p>
                </div>

                <div class="d-flex gap-2 mt-5 border-top pt-4">
                    <a href="{{ path('app_admin_event_index') }}" class="btn btn-outline-secondary">Back to List</a>
                    <a href="{{ path('app_admin_event_edit', {'id': event.id}) }}" class="btn btn-primary">Edit Event</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
