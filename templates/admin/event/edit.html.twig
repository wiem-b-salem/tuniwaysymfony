{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 fw-bold text-primary">Edit Event</h1>
                        {{ include('admin/event/_delete_form.html.twig') }}
                    </div>

                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="mt-4 d-flex justify-content-between">
                            <a href="{{ path('app_admin_event_index') }}" class="btn btn-outline-secondary">Back to List</a>
                            <button class="btn btn-primary">{{ button_label|default('Update Event') }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
