{% extends 'base.html.twig' %}

{% block title %}Manage Reservations - TuniWay{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Manage Incoming Reservations</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if reservations is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No reservations found for your tours yet.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Tour</th>
                        <th>User</th>
                        <th>Persons</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for r in reservations %}
                        <tr>
                            <td>{{ r.reservationDate|date('d M Y') }}</td>
                            <td>
                                <a href="{{ path('app_tour_personnalise_show', {'id': r.tour.id}) }}">
                                    {{ r.tour.title }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('app_message_chat', {'id': r.user.id}) }}" class="text-decoration-none">
                                    <i class="bi bi-person-circle"></i> {{ r.user.username }}
                                    <i class="bi bi-chat-dots text-primary ms-1"></i>
                                </a>
                            </td>
                            <td><i class="bi bi-people"></i> {{ r.numbersOfPersons }}</td>
                            <td>
                                {% if r.status == 'APPROVED' %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Approved</span>
                                {% elseif r.status == 'REJECTED' %}
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rejected</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pending</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if r.status == 'PENDING' %}
                                    <form method="post" action="{{ path('app_reservation_approve', {'id': r.id}) }}" style="display:inline-block">
                                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ r.id) }}">
                                        <button class="btn btn-success btn-sm">
                                            <i class="bi bi-check-lg"></i> Approve
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('app_reservation_reject', {'id': r.id}) }}" style="display:inline-block; margin-left: 5px;" onsubmit="return confirm('Reject this reservation?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ r.id) }}">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="bi bi-x-lg"></i> Reject
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
