{% extends 'base.html.twig' %}

{% block title %}My Reservations - TuniWay{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">My Reservations</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if reservations is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> You have no reservations yet.
                <a href="{{ path('app_tour_index') }}" class="alert-link">Browse tours</a>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Tour/Place</th>
                        <th>Persons</th>
                        <th>Total Price</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.reservationDate|date('d M Y') }}</td>
                            <td>
                                {% if reservation.tour %}
                                    <i class="bi bi-map"></i> Tour: <a href="{{ path('app_tour_personnalise_show', {'id': reservation.tour.id}) }}">{{ reservation.tour.title }}</a>
                                {% elseif reservation.place %}
                                    <i class="bi bi-geo-alt"></i> Place: <a href="{{ path('app_place_show', {'id': reservation.place.id}) }}">{{ reservation.place.name }}</a>
                                {% endif %}
                            </td>
                            <td><i class="bi bi-people"></i> {{ reservation.numbersOfPersons }}</td>
                            <td><strong>{{ reservation.totalPrice }} TND</strong></td>
                            <td>
                                {% if reservation.status == 'APPROVED' %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Approved</span>
                                {% elseif reservation.status == 'REJECTED' %}
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rejected</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Pending</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
