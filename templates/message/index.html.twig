{% extends 'base.html.twig' %}

{% block title %}My Messages{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-4 text-primary fw-bold">Inbox</h2>

        <div class="list-group shadow-sm border-0">
        {% for conv in conversations %}
            <a href="{{ path('app_message_chat', {'id': conv.partner.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3 border-0 border-bottom">
                <div class="d-flex align-items-center">
                    <div class="me-3 position-relative">
                        <div class="ratio ratio-1x1 rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 50px;">
                            {{ conv.partner.username|first|upper }}
                        </div>
                        {% if conv.unreadCount > 0 %}
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                {{ conv.unreadCount }}
                            </span>
                        {% endif %}
                    </div>
                    <div>
                        <h5 class="mb-1 fw-bold">{{ conv.partner.username }}</h5>
                        <p class="mb-0 text-muted text-truncate" style="max-width: 300px;">
                            {% if conv.lastMessage.sender == app.user %}
                                <i class="bi bi-reply-fill"></i> You: 
                            {% endif %}
                            {{ conv.lastMessage.content }}
                        </p>
                    </div>
                </div>
                <small class="text-muted">{{ conv.lastMessage.sentAt|date('M d, H:i') }}</small>
            </a>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-chat-square-dots fs-1 text-muted mb-3"></i>
                <p class="lead text-muted">No messages yet.</p>
                <p>Visit guide profiles to start a conversation!</p>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
